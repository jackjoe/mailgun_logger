<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <p>These settings can be found on your Mailgun dashboard. An account covers a sending domain / API key combo. If you have multiple domains, add them on seperate accounts.</p>

  <%= if Phoenix.Flash.get(@flash, :info) do %>
    <div class="alert alert-info" role="info">
      <%= Phoenix.Flash.get(@flash, :info) %>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, :firstname, class: "control-label" %>
    <%= text_input f, :firstname, class: "form-control" %>
    <%= error_tag f, :firstname %>
  </div>

  <div class="form-group">
    <%= label f, :lastname, class: "control-label" %>
    <%= text_input f, :lastname, class: "form-control" %>
    <%= error_tag f, :lastname %>
  </div>

  <div class="form-group">
    <%= label f, :email, class: "control-label" %>
    <%= text_input f, :email, class: "form-control" %>
    <%= error_tag f, :email %>
  </div>

  <%= if @new? do %>
  <div class="form-group">
    <%= label f, :password, class: "control-label" %>
    <%= password_input f, :password, class: "form-control" %>
    <%= error_tag f, :password %>
  </div>
  <% end %>

  <div class="form-group">
    <label>Roles</label><br>
    <%= for role_name <- @all_role_names do %>
      <input 
        id={"role_#{role_name}"} 
        name={"user_role_names[#{role_name}]"} 
        type="checkbox" 
        value={role_name} 
        checked={Enum.member?(Enum.map(@changeset.data.roles, & &1.name), role_name)}
      >
      <label for={"role_#{role_name}"}><%= role_name %></label><br>
    <% end %>
  </div>

  <div class="form-group mt-5">
    <%= submit "submit", class: "btn btn-primary"%>
  </div>
<% end %>
